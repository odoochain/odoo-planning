<odoo>
    <data>
        <record id="planning_day_tasks_view_kanban" model="ir.ui.view">
            <field name="name">day.plan.kanban</field>
            <field name="model">day.plan</field>
            <field name="arch" type="xml">
                <kanban default_group_by="colum_date" class="o_kanban_dashboard o_kanban_small_column" js_class="project_kanban" sample="1">
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="remaining_hours"/>
                    <field name="colum_date" options="{&quot;group_by_tooltip&quot;: {&quot;description&quot;: &quot;Description&quot;}}" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-3">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                            t-att-alt="record.user_id.value"
                                            class="o_image_40_cover float-left"/>
                                    </div>
                                    <div class="col-6">
                                        <div row="row-1">
                                            <strong><field name="user_id"/></strong>
                                        </div>
                                        <div row="row-1">
                                            <span>
                                                <i class="fa fa-calendar" role="img" aria-label="Date" title="Date"/>
                                                <t t-esc="record.date.value"/>
                                            </span>
                                        </div>
                                        <div row="row-1">
                                            <span>
                                                Remaining:
                                                <!-- <field name="remaining_hours"/> -->
                                                <t t-esc="record.remaining_hours.value"/>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <div class="o_dropdown_kanban dropdown">
                                            <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                                <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="planning_day_tasks_view_form" model="ir.ui.view">
            <field name="name">day.plan.view.form</field>
            <field name="model">day.plan</field>
            <field name="arch" type="xml">
                <form string="Day Plan">
                    <sheet>
                        <group>
                            <field name="user_id"/>
                            <field name="date"/>
                            <field name="colum_date"/>
                            <field name="planned_hours"/>
                            <field name="remaining_hours"/>
                            <field name="task_ids" options="{'no_create': True}">
                                <tree string="Tasks" options="{'no_create': True}">
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="planned_hours"/>
                                    <field name="remaining_hours"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="planning_day_tasks_action_by_user" model="ir.actions.act_window">
            <field name="name">Planned Tasks by Employee</field>
            <field name="res_model">day.plan</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="planning_day_tasks_view_kanban" />
        </record>

        <menuitem id="menu_planning_tasks"
            name="Planned Tasks"
            parent="hr_timesheet.timesheet_menu_root"
            sequence="10"/>
        <menuitem id="planning_day_tasks_menu_by_user"
            name="Day Planner" sequence="20"
            parent="menu_planning_tasks"
            action="planning_day_tasks_action_by_user"/>
    </data>
</odoo>