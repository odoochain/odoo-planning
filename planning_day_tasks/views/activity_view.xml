<odoo>
    <data>
        <record id="planned_activities_kanban" model="ir.ui.view">
            <field name="name">mail.activity.kanban</field>
            <field name="model">mail.activity</field>
            <field name="arch" type="xml">
                <kanban default_group_by="date_deadline:day" class="o_kanban_dashboard o_kanban_small_column" sample="1" create="false">
                    <field name="user_id"/>
                    <field name="date_deadline"/>
                    <field name="planned_hours" widget="float_time"/>
                    <progressbar field="state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}' sum_field="planned_hours"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-3">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                            t-att-alt="record.user_id.value"
                                            class="o_image_40_cover float-left"/>
                                    </div>
                                    <div class="col-7">
                                        <div row="row-1">
                                            <strong><field name="user_id"/></strong>
                                        </div>
                                        <div row="row-1">
                                            <span>
                                                <i class="fa fa-calendar" role="img" aria-label="Date" title="Date"/>
                                                <t t-esc="record.date_deadline.value"/>
                                            </span>
                                            <span>
                                                Planned:
                                                <field name="planned_hours" widget="float_time"/>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <div class="o_dropdown_kanban dropdown">
                                            <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                                <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_project_kanban_boxes" style="margin-top: 10px; text-align: end;">
                                    <a class="o_project_kanban_box" name="action_view_activity_tasks" type="object">
                                        <div>
                                            <span class="o_label">View Task</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="planned_activities_form" model="ir.ui.view">
            <field name="name">mail.activity.form</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
                <xpath expr="//group[last()]" position="after">
                    <group attrs="{'invisible': [('res_model', '!=', 'project.task')]}">
                        <group>
                            <field name="planned_hours" widget="float_time"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="mail_activity_view_search" model="ir.ui.view">
            <field name="name">mail.activity.form</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_search"/>
            <field name="arch" type="xml">
                <field name="activity_type_id" position="after">
                    <field name="user_id"/>
                </field>
                <xpath expr="//filter[last()]" position="after">
                    <filter string="My Activities" name="my_activities" domain="[('user_id', '=', uid)]"/>
                </xpath>
            </field>
        </record>


        <record id="action_view_all_planned_activities" model="ir.actions.act_window">
            <field name="name">Daily Activities</field>
            <field name="res_model">mail.activity</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="domain">[('res_model', '=', 'project.task')]</field>
            <field name="context">{'search_default_my_activities': 1}</field>
            <field name="search_view_id" ref="mail.mail_activity_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No activity found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>

        <menuitem name="Daily Activities" id="menu_task_planned_activities" parent="project.menu_main_pm"
                action="planning_day_tasks.action_view_all_planned_activities" sequence="5" groups="base.group_no_one,project.group_project_user"/>
    </data>
</odoo>