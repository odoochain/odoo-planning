        <record id="planning_ce_view_search" model="ir.ui.view">
            <field name="name">planner_ce.slot.search</field>
            <field name="model">planner_ce.slot</field>
            <field name="arch" type="xml">
                <search>
<!--                    <field name="role_id" />-->
                    <field name="employee_id" />
                    <field name="project_id"/>
                    <filter name="open_shifts" string="Open Shifts" domain="[('employee_id', '=', False)]" />
                    <filter name="my_shifts" string="My Shifts" domain="[('user_id', '=', uid)]" />
                    <separator />
                    <filter name="future" string="Future" domain="[('start_datetime', '>=', time.strftime('%%Y-%%m-%%d 00:00:00') )]" />
                    <filter name="past" string="Past" domain="[('start_datetime', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]" />
                    <filter name="filter_today_timelogs" string="Today" domain="[('start_datetime','&lt;=',time.strftime('%%Y-%%m-%%d 23:59:59')),('start_datetime','&gt;=',time.strftime('%%Y-%%m-%%d 00:00:00'))]" />
                    <filter string="Current Month" name="Current_month" domain="[('start_datetime','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('start_datetime','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                    
                    
                    
                    <filter string="Previous Month" name="Prev_month" domain="[('start_datetime','&gt;=',(context_today()-relativedelta(months=1+datetime.date.today().weekday())).strftime('%%Y-%%m-01')),('start_datetime','&lt;',time.strftime('%%Y-%%m-01'))]"/>
         
                    <filter string="Next Month" name="Next_month" domain="[('start_datetime','&lt;',(context_today()+relativedelta(months=2)).strftime('%%Y-%%m-01')), ('start_datetime','&gt;=',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                             
                    <filter string="Previous week" name="Previous week" domain="[('start_datetime','&gt;=',(datetime.date.today() - relativedelta(days=7 + datetime.date.today().weekday())).strftime('%%Y-%%m-%%d')),('start_datetime','&lt;',(datetime.date.today() - datetime.timedelta(days=9 - datetime.date.today().weekday())).strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                    
                    <filter name="terp-go-week" string="Next week" domain="[('start_datetime','&gt;=',(datetime.date.today() + datetime.timedelta(days=6-datetime.date.today().weekday())).strftime('%%Y-%%m-%%d 23:59:59')),('start_datetime','&lt;=', (datetime.date.today()+ datetime.timedelta(days=13 - datetime.date.today().weekday())).strftime('%%Y-%%m-%%d 23:59:59'))]"/>
            
                    <filter name="terp-go-week1" string="This week" domain="[('start_datetime','&gt;=',(datetime.date.today() - datetime.timedelta(days=datetime.date.today().weekday())).strftime('%%Y-%%m-%%d 00:00:00')),('start_datetime','&lt;=', (datetime.date.today()+ datetime.timedelta(days=6 - datetime.date.today().weekday())).strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                    
                    
                    <group string="Group By">
                        <filter name="group_by_employee" string="Employee" context="{'group_by': 'employee_id'}" />
<!--                        <filter name="group_by_role" string="Role" context="{'group_by': 'role_id'}" />-->
                        <filter name="group_by_start_datetime" string="Start Date" context="{'group_by':'start_datetime:day'}" />
                        <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
<!--                        <filter name="group_by_task" string="Task" context="{'group_by': 'task_id'}"/>-->
                    </group>
                </search>
            </field>
        </record>
